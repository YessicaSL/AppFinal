<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppFinal.ViewModels"
             x:Class="AppFinal.Views.Alumno"
             x:DataType="vm:AlumnoViewModel"
             Title="Alumno">
    <VerticalStackLayout Padding="10" BackgroundColor="Gray">
        <Entry
            Margin="0,10,0,0"
            BackgroundColor="White" Text="{Binding Text_Apellido}"/>
        <Entry BackgroundColor="White" Text="{Binding Text_Nombre}"/>
        <Button Text="Guardar" Command="{Binding GuardarAlumnoCommand}"/>
    </VerticalStackLayout>
</ContentPage>